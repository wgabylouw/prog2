<Window x:Class="TP2_interface_graphique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP2_interface_graphique"
        mc:Ignorable="d"
        Title="Accueil" Height="400" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Utilisateur :" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />

        <ComboBox Grid.Row="0" Grid.Column="1" Margin="90,40,90,40" />

        <Button Content="Créer" Margin="90,40,90,40" Grid.Row="1" Grid.Column="0" Click="Button_Click_1" />

        <Button Content="Se connecter" Margin="90,40,90,40" Grid.Row="1" Grid.Column="1" Click="Button_Click" />

        <Button Content="Quitter" Margin="150,40,150,40" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Click="Button_Click_2"  />

    </Grid>

    
</Window>
